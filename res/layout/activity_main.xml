-->

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<de.markusfisch.android.counter.StatsView
				android:id="@+id/stats"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"/>
			<ListView
				android:id="@+id/rides"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@android:color/transparent"
				android:cacheColorHint="@android:color/transparent"/>
		</RelativeLayout>

